<div class="banner">
  <div class="text-center text-white align-text-middle">
    <h1>SAVE ALL YOUR MOVIES</h1>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-add" %>
  </div>

<div class="row">
  <% @lists.each do |list| %>
  <%= link_to list_path(list), class: "text-decoration-none" do %>
      <% if list.photo.attached? %>
        <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <%= list.name %>
      <% else %>
        <div class="card-category" style="background-image: url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80)">
        <%= list.name %>
      <% end %>
    <% end %>
      </div>
    <% end %>
  </div>


  </div>
</div>
