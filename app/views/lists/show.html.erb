
<h1><%= @list.name %></h1>

<div class="card-product">
  <% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top" %>
    <div class="card-product-infos">
      <h2><%= movie.title %></h2>
      <p><strong>â€¢ <%= movie.rating %> <i class="fas fa-star star-yellow"></i></strong> </p>
      <p><%= movie.overview %> </p>
    </div>
  <p><%= bookmark.comment %></p>
  <%= link_to "Delete movie of this list", bookmark_path(bookmark), method: :delete, class: "btn btn-cancel", data: { confirm: "Are you sure you want to delete this list?" } %>
  <% end %>
</div>




<%= "You haven't saved any movies yet!" if @list.movies.empty? %>
<%= link_to "Add a movie to this list", new_list_bookmark_path(@list), class: "btn btn-flat" %>

<%= link_to "Back to the lists", lists_path, class: "btn btn-flat" %>

